<h1 class="container-title">
  <a href="https://twitter.com/search?q=%23javascript" target="_blank" class="container-title-link">
    #javascript
  </a>
  <a href="https://twitter.com/search?q=%23emberjs" target="_blank" class="container-title-link">
    #emberjs
  </a>
</h1>

{{app-add-post createPost='createPost' title=postTitle subject=postSubject body=postBody}}

<div class="posts">
  {{#each model as |post|}}
    <div class="column">
      <div class="posts-item">
        <h2>{{post.title}}</h2>
        <h4>{{post.subject}}</h4>
      </div>
      <button type="button" name="button" {{action 'deletePost' post.id}}>Delete</button>
    </div>
  {{/each}}
</div>
