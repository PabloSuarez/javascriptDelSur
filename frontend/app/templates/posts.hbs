<h1 class="container-title">Posts</h1>

<div>
  <div class="form-post-title">
    <label for="post-title">Title:</label>
    {{input type="text" value=postTitle name="post-title"}}

    <label for="post-body">Body:</label>
    {{textarea value=postBody name="post-body" placeholder="" class="" }}

    <button {{action 'save'}} type="button" name="button">Save</button>
  </div>
</div>

<hr/>

<div class="posts">
  {{#each model as |post|}}
    <div class="column">
      <div class="posts-item">
        <h2>{{post.title}}</h2>
        <h4>{{post.body}}</h4>
      </div>
    </div>
  {{/each}}
</div>

