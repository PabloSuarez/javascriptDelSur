footer
  position fixed
  bottom 0
  width 100%
  margin 0 auto
  background-color rgba(48,74,64,.4)

  .item
    display inline-block
    padding .2rem .4rem .2rem .8rem
    position relative

    &::after
      content ""
      position absolute
      top 0
      height 0
      left 100%
      border solid .8rem
      border-color transparent transparent transparent rgba(48,74,64,.6)
